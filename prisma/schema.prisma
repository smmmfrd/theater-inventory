// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider     = "mysql"
    url          = env("DATABASE_URL")
    relationMode = "prisma"
}

model Theater {
    theaterId Int        @id
    showtimes Showtime[]
}

model Movie {
    movieId       Int        @id
    title         String     @db.Text
    description   String     @db.Text
    ranking       Int
    posterImage   String     @db.Text
    backdropImage String     @db.Text
    Showtime      Showtime[]
}

model Showtime {
    showtimeId     Int      @id @default(autoincrement())
    time           DateTime
    maxSeats       Int
    availableSeats Int

    tickets TicketOrder[]

    theaterId Int
    theater   Theater @relation(fields: [theaterId], references: [theaterId], onDelete: Cascade)

    movieId Int
    movie   Movie @relation(fields: [movieId], references: [movieId], onDelete: Cascade)

    @@index([theaterId])
    @@index([movieId])
}

model TicketOrder {
    name       String
    movieTitle String
    number     Int
    ticketId   String @id @default(uuid())

    showtimeId Int
    showtime   Showtime @relation(fields: [showtimeId], references: [showtimeId], onDelete: Cascade)

    @@index([showtimeId])
}
