// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider        = "prisma-client-js"
    previewFeatures = ["jsonProtocol"]
}

datasource db {
    provider = "sqlite"
    url      = env("DATABASE_URL")
}

model Theater {
    id        Int        @id
    showtimes Showtime[]
}

model Movie {
    id          Int        @id
    title       String
    description String
    image       String
    showtimes   Showtime[]
}

model Showtime {
    time           DateTime
    matinee        Boolean
    availableSeats Int

    movieId Int
    movie   Movie @relation(fields: [movieId], references: [id])

    theaterId Int
    theater   Theater @relation(fields: [theaterId], references: [id])

    tickets Tickets[]

    @@id([time, movieId])
}

model Tickets {
    name      String
    createdAt DateTime @default(now())

    showtimeTime    DateTime
    showtimeMovieId Int
    showtime        Showtime @relation(fields: [showtimeTime, showtimeMovieId], references: [time, movieId])

    @@id([name, createdAt])
}
